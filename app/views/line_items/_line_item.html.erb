<div class="container-fluid text-center">
  <div class="row" id = "<%= "line_item_" + line_item.id.to_s %>">
    
    <div class="col-sm-1">
      <div class="row">
        <%= button_to '-', decrease_line_item_path(product_id: line_item.product.id), method: :patch, class: "btn btn-warning", remote: true %>
      </div>
      <div class="row">
        <span id="item_quantity"><%= line_item.quantity %></span>
      </div>
      <div class="row">
        <%= button_to '+', line_items_path(product_id: line_item.product.id), class: "btn btn-warning", remote: true %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="row">
        <%= image_tag(line_item.product.images.first, size: '128x128') %>
      </div>
      <div class="row">
        <strong><%= line_item.product.title %></strong>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="row">
        <h4>Item Description</h4>
      </div>
      <div class="row">
        <%= truncate(line_item.product.description, length: 140) %>
      </div>
    </div>

    <div class="col-sm-2">
        <h4>Price</h4><strong class="f4" ><div id = "total"><%= number_to_currency(line_item.total_price) %></div> </strong>
    </div>

    <div class="col-sm-3">
      <%= link_to 'Remove item', line_item, method: :delete, data: {confirm: "Are you sure?"},
      class: "btn btn-warning mb4", remote: true %>
    </div>
  </div>
</div>
<hr>